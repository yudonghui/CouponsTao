<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_ping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ping"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#00B6B9"
        android:gravity="center"
        android:text="PING测试"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ydh.couponstao.views.ClearEditText
            android:id="@+id/et_input_ip"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_box_5"
            android:hint="请输入IP或域名"
            android:imeOptions="actionDone"
            android:lines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:textColor="#3C3C3C"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_ping"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:background="@drawable/shape_theme_5"
            android:text="ping"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_white_10"
        android:padding="10dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="#000000"
        android:visibility="gone" />

</LinearLayout>