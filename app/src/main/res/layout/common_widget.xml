<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_20"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_alipay"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_alipay_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/scan_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="扫一扫"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alipay_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/two_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="付款码"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alipay_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/two_white" />

            <TextView
                android:id="@+id/tv_alipay_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="随身码"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="微    信"
            android:textColor="@color/color_white"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/ll_wx_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/scan_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_wx_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/two_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="付款码"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wx_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_gray_10"
                android:padding="15dp"
                android:src="@mipmap/two_white" />

            <TextView
                android:id="@+id/tv_wx_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="随身码"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>